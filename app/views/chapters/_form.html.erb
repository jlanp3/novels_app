<% if @chapter.new_record? %>
	<h1>New Chapter</h1>
<% else %>
	<h1>Edit Chapter</h1>
<% end %>

<%= form_for [@novel, @chapter] do |f| %>

	<%= f.label 'Chapter' %> <br>
	<%= f.text_field :chap %> <br>

	<%= f.label :name %> <br>
	<%= f.text_field :name %> <br>

	<%= f.label :content %> <br>
	<%= f.text_area :content, class: "txt-area" %> <br>

	<%= f.hidden_field(:novel_id, :value => @novel.id) %>

	<%= @chapter.new_record? ? (f.button 'New Chapter') : (f.button 'Edit Chapter') %>

<% end %>