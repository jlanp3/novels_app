<% if @chapter.new_record? %>
	<h1>New Chapter</h1>
<% else %>
	<h1>Edit Chapter</h1>
<% end %>

<%= form_for [@novel, @chapter] do |f| %>
	
	<%= f.label 'Chapter' %> <br>
	<%= f.text_field :chap %> <br>

	<%= f.label :name %> <br>
	<%= f.text_field :name %> <br>

	<%= f.label :content %> <br>
	<%= f.text_area :content, class: "txt-area" %> <br>
	
	<%= f.label 'Select Novel' %> <br>
	<%= f.collection_select :novel_id, Novel.all, :id, :name, prompt: true %> <br>


	<%= @chapter.new_record? ? (f.button 'New Chapter') : (f.button 'Edit Chapter') %>

<% end %>